{
  "name": "ionic5-hybrid",
  "version": "1.0.0",
  "description": "An Amazing Capacitor App",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "electron:start": "npm run build && electron ./",
    "electron:startdev": "npm-run-all -p web:local electron:dev",
    "electron:dev": "wait-on http-get://localhost:4200/ && npm run build && electron ./",
    "web:local": "cd ../ && ng run app:serve --host=localhost --port=4200",
    "electron:pack": "npm run build && electron-builder build --dir",
    "electron:build-windows": "npm run build && electron-builder build --windows",
    "electron:build-mac": "npm run build && electron-builder build --mac"
  },
  "dependencies": {
    "@capacitor-community/electron-core": "file:../../capacitor-electron/electron-core",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.2.2"
  },
  "devDependencies": {
    "electron": "~9.3.0",
    "electron-builder": "~22.7.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~3.9.5",
    "wait-on": "^5.0.1"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.example.capacitor-app",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "appIcon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "appIcon.png"
    }
  }
}
