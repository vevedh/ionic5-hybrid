{
  "productName": "ionic5-hybrid",
  "artifactName": "${productName}-${version}.${ext}",
  "copyright": "Copyright © 2019 Hervé de CHAVIGNY",
  "appId": "io.ionic5-hybrid.starter",
  "directories": {
    "output": "release/"
  },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
    "squirrelWindows": {
      "msi": "true"
    },
    "msi": {
      "warningsAsErrors": false
    },
    "nsis": {
      "oneClick": false,
      "createStartMenuShortcut": true,
      "packElevateHelper": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true
    },
  "win": {
    "icon": "icon.ico",
    "requestedExecutionLevel": "highestAvailable",
    "target": [
      "portable"
    ]
  },
  "mac": {
    "icon": "icon.icns",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "icon.ico",
    "target": [
      "AppImage"
    ]
  }
}
