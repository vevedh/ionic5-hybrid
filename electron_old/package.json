{
  "name": "ionic5-hybrid",
  "version": "1.0.0",
  "description": "An Amazing Capacitor App",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "electron:start": "npm run build && electron ./",
    "electron:startdev": "npm-run-all -p web:local electron:dev",
    "electron:dev": "wait-on http-get://localhost:4200/ && npm run build && electron ./",
    "web:local": "cd ../ && ng run app:serve --host=localhost --port=4200",
    "electron:pack": "npm run build && electron-builder build --dir",
    "electron:build-windows": "npm run build && electron-builder build --windows",
    "electron:build-mac": "npm run build && electron-builder build --mac"
  },
  "dependencies": {
    "@capacitor-community/electron-core": "latest",
    "cap-powershell": "latest",
    "electron-log": "^4.2.2",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "wait-on": "^5.0.1"
  },
  "devDependencies": {
    "electron": "~9.3.1",
    "electron-builder": "~22.7.0",
    "electron-is-dev": "^1.2.0",
    "typescript": "~3.9.5"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "io.ionic5-hybrid.starter",
    "files": [
      "**/*",
      "build/index.js",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!angular.json",
      "!_config.yml",
      "!karma.conf.js",
      "!tsconfig.json",
      "!tslint.json"
    ],
    "squirrelWindows": {
      "msi": "true"
    },
    "msi": {
      "warningsAsErrors": false
    },
    "nsis": {
      "oneClick": false,
      "createStartMenuShortcut": true,
      "packElevateHelper": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "assets/appIcon.png"
    },
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "highestAvailable",
      "icon": "assets/appIcon.png"
    },
    "linux": {
      "icon": "assets/appIcon.png",
      "target": [
        "AppImage"
      ]
    }
  }
}
